<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="min_tip_percent"
        android:title="@string/pref_title_min_tip_percent"
        android:defaultValue="@string/pref_default_min_tip_percent"
        android:selectAllOnFocus="true"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:saveEnabled="true" />

    <EditTextPreference
        android:key="max_tip_percent"
        android:title="@string/pref_title_max_tip_percent"
        android:defaultValue="@string/pref_default_max_tip_percent"
        android:selectAllOnFocus="true"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:saveEnabled="true" />

    <EditTextPreference
        android:key="resolution_tip_percent"
        android:title="@string/pref_title_resolution_tip_percent"
        android:defaultValue="@string/pref_default_resolution_tip_percent"
        android:selectAllOnFocus="true"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:saveEnabled="true" />
</PreferenceScreen>
